    <number-of-images>&nrimages;</number-of-images>
    <renew>&renew;</renew>
    <palette/>
    <dateformat>&dateformat;</dateformat>
    <region>
      <top>0.0</top>
      <left>0.0</left>
      <height>0.5</height>
      <width>0.5</width>
