  <entry xml:id="full512">
    <name>Full 512x512</name>
    <desc>Full image of the Sun in 512x512 resolution</desc>
    <observatory>SDO</observatory>
    <instrument>AIA</instrument>
    <detector>AIA</detector>
    <measurement>1600</measurement>
    <fps>25</fps>
    <resolution>512</resolution>
    <duration>&duration;</duration>
    <gop>&gop;</gop>
    <number-of-images>&nrimages;</number-of-images>
    <renew>&renew;</renew>
    <palette/>
    <dateformat>&dateformat;</dateformat>
    <subchannels>
      <channel href="topleft512"/>
      <channel href="topright512"/>
      <channel href="bottomleft512"/>
      <channel href="bottomright512"/>
    </subchannels>
  </entry>

